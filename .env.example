# qBittorrent runtime
PUID=1000
PGID=1000
UMASK=002
TZ=Etc/UTC
QBIT_WEBUI_PORT=8080
LIBTORRENT=v2
QBIT_PUBLIC_URL=https://torrent.example.com

# VPN egress for qBittorrent (Gluetun + NordVPN)
VPN_SERVICE_PROVIDER=nordvpn
VPN_TYPE=openvpn
OPENVPN_USER=REPLACE_WITH_NORDVPN_SERVICE_USERNAME
OPENVPN_PASSWORD=REPLACE_WITH_NORDVPN_SERVICE_PASSWORD
VPN_SERVER_COUNTRIES=Netherlands

# Cloudflared tunnel
CLOUDFLARED_TUNNEL_TOKEN=REPLACE_WITH_YOUR_TUNNEL_TOKEN

# Fixed Docker network for trusted reverse-proxy settings
APP_NET_SUBNET=172.30.0.0/24
QBITTORRENT_IP=172.30.0.10
CLOUDFLARED_IP=172.30.0.11
JELLYFIN_IP=172.30.0.12

# Jellyfin
JELLYFIN_PUBLIC_URL=https://media.example.com
JELLYFIN_TLS_PFX_FILE=./jellyfin.pfx
JELLYFIN_TLS_PFX_PASSWORD=CHANGE_TO_A_LONG_RANDOM_PASSWORD
